<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/sv_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0000ff00" />

    <LinearLayout
        android:id="@+id/ll_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/loading_big" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="请稍候，正在加载视频中"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_error_page" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="网络异常"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_video_true_time_data"
        android:layout_width="135dp"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:background="@drawable/shape_video_true_time_background"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_video_true_time_data_ammonia"
            style="@style/vidoe_true_time_item_style"
            android:singleLine="true"
            android:text="氨气 : --.--ppm" />

        <TextView
            android:id="@+id/tv_video_true_time_data_temperature"
            style="@style/vidoe_true_time_item_style"
            android:text="温度 : --℃" />

        <TextView
            android:id="@+id/tv_video_true_time_data_humidity"
            style="@style/vidoe_true_time_item_style"
            android:text="湿度 : --%" />

        <TextView
            android:id="@+id/tv_video_true_time_data_power_supply_1"
            style="@style/vidoe_true_time_item_style"
            android:text="市电一 : ---" />

        <TextView
            android:id="@+id/tv_video_true_time_data_power_supply_2"
            style="@style/vidoe_true_time_item_style"
            android:text="市电二 : ---" />

        <TextView
            android:id="@+id/tv_video_true_time_data_power_supply_3"
            style="@style/vidoe_true_time_item_style"
            android:text="市电三 : ---" />

        <TextView
            android:id="@+id/tv_video_true_time_data_power_supply_4"
            style="@style/vidoe_true_time_item_style"
            android:text="市电四 : ---" />

        <TextView
            android:id="@+id/tv_video_true_time_data_power_supply_5"
            style="@style/vidoe_true_time_item_style"
            android:text="市电五 : ---" />

        <TextView
            android:id="@+id/tv_video_true_time_data_power_supply_6"
            style="@style/vidoe_true_time_item_style"
            android:text="市电六 : ---" />

        <TextView
            android:id="@+id/tv_video_true_time_data_power_supply_7"
            style="@style/vidoe_true_time_item_style"
            android:text="市电七 : ---" />

        <TextView
            android:id="@+id/tv_video_true_time_data_power_supply_8"
            style="@style/vidoe_true_time_item_style"
            android:text="市电八 : ---" />
    </LinearLayout>

</FrameLayout>