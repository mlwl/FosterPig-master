            android:src="@mipmap/setting_warn" />

        <TextView
            style="@style/setting_item_middle_text_style"
            android:text="通知报警" />

        <ImageView
            android:id="@+id/iv_setting_switch"
            style="@style/setting_item_left_right_image_style"
            android:src="@mipmap/setting_switch_close" />
    </LinearLayout>

