<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_item_sure_warn_left_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/test_item_image" />


    <TextView
        android:id="@+id/tv_sure_warn_monitor_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_item_sure_warn_left_image"
        android:layout_toRightOf="@id/iv_item_sure_warn_left_image"
        android:text="#2猪舍安琪点"
        android:textColor="@color/black"
        android:textSize="17dp" />


    <LinearLayout
        android:id="@+id/ll_sure_warn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_item_sure_warn_left_image"
        android:layout_toRightOf="@id/iv_item_sure_warn_left_image"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sure_warn_monitor_warn_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="报警:16/11/11 21:21:15"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_sure_warn_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确认:16/11/11 21:21:15"
            android:textColor="@color/black"
            android:textSize="12dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_sure_warn_monitor_warn_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/iv_item_sure_warn_left_image"
        android:layout_marginRight="20dp"
        android:text="1000ppm"
        android:textColor="@color/red"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/iv_item_sure_warn_right_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_sure_warn_monitor_address"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/iv_item_sure_warn_left_image"
        android:layout_marginRight="20dp"
        android:src="@mipmap/link_normal"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:layout_below="@id/ll_sure_warn"
        android:layout_marginTop="10dp"
        android:background="@color/thin_gray" />
</RelativeLayout>