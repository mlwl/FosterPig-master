<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@color/dark_blue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tab_all_site"
                style="@style/TabsPublicStyle"
                android:layout_marginLeft="@dimen/tap_far_left_right"
                android:layout_marginRight="@dimen/tap_middle"
                android:background="@drawable/shape_select_tap_background_white"
                android:text="站点"
                android:textColor="@color/thin_blue" />

            <TextView
                android:id="@+id/tv_tab_warn_information"
                style="@style/TabsPublicStyle"
                android:layout_marginLeft="@dimen/tap_middle"
                android:layout_marginRight="@dimen/tap_middle"
                android:background="@drawable/shape_select_tap_background_blue"
                android:text="报警"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_tab_sure_warn"
                style="@style/TabsPublicStyle"
                android:layout_marginLeft="@dimen/tap_middle"
                android:layout_marginRight="@dimen/tap_middle"
                android:background="@drawable/shape_select_tap_background_blue"
                android:text="历史"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_tab_video"
                style="@style/TabsPublicStyle"
                android:layout_marginLeft="@dimen/tap_middle"
                android:layout_marginRight="@dimen/tap_far_left_right"
                android:background="@drawable/shape_select_tap_background_blue"
                android:text="视频"
                android:textColor="@color/white" />

        </LinearLayout>


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_select_true_time"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.47"></FrameLayout>


</LinearLayout>