<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="main_bottom_item_text_style">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_bottom_item_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="main_bottom_item_round_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12dp</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="main_bottom_item_red_round_style" parent="main_bottom_item_round_style">
        <item name="android:background">@drawable/shape_red_round</item>
    </style>

    <style name="main_bottom_item_gray_round_style" parent="main_bottom_item_round_style">
        <item name="android:background">@drawable/shape_gray_round</item>
    </style>

    <style name="TabsPublicStyle">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/tap_text_padding</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="text_blod">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_normal">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="editText_parent">
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_editext_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="editText_child" parent="editText_parent">
        <item name="android:drawablePadding">15dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="login_in_padding">
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="setting_item_ll_parent_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="setting_item_left_right_image_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="setting_item_middle_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/setting_gray_color</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="vidoe_true_time_item_style">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="dialog_video_parent_style">
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
